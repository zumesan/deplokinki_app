<!DOCTYPE html>
<html>
  <head>
    <title>DeplokinkiApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <header class="">
      <div class="top_header">
        <div>
          <%= link_to image_tag("deplo_logo.png", class: :logo), root_path %>
        </div>
        <div class="search_bar_contents">

          <%= search_form_for @search, url: search_deplos_path, html: {id: "detailed-search-form"} do |f| %>
            <div class="search-field">
              <%= f.label :deplo_title_cont, '検索フォーム' %>
              <br>
              <%= f.text_field :deplo_title_cont, placeholder: 'キーワード' %>
            </div>
            <%= f.submit '検索' %>
          <% end %>

        </div>
        <div class="nav_right">
          <% if user_signed_in? %>
            <%= link_to '新規投稿', new_deplo_path, class:"back-btn" %>
            <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class:"back-btn" %>
          <% else %>
            <%= link_to '新規登録', new_user_registration_path, class:"back-btn" %>
            <%= link_to 'ログイン', new_user_session_path, class:"back-btn" %>
          <% end %>
        </div>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
