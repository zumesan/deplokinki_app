<!DOCTYPE html>
<html>
  <head>
    <title>DeplokinkiApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <header class="header">
      <div class="top_header">
        <div>
          <%= link_to image_tag("deplo_logo.png", class: :logo), root_path %>
        </div>

        <div class="search_bar_contents">

          <%= search_form_for @q, url: search_deplos_path, html: {id: "detailed-search-form"} do |f| %>
            <div class="search-fields">
              <div class="search-field">
                <%= f.text_field :deplo_title_or_deplo_info_or_municipality_cont, placeholder: 'キーワード' %>
              </div>
            </div>
            <%= f.collection_select :prefecture_id_eq, Prefecture.all, :id, :name, include_blank: "都道府県を選択" %>

            <%= f.collection_select :category_id_eq, Category.all, :id, :name, include_blank: "カテゴリーを選択" %>
            <%= f.submit '絞り込み検索', class: :search_btn  %>
          <% end %>
          

        </div>
        <div class="nav_right">
          <% if user_signed_in? %>
            <%= link_to current_user.nickname, deplos_prefecture_users_show_path %>
            <%= link_to '新規投稿', new_deplo_path, class:"back-btn" %>
            <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class:"back-btn" %>
          <% else %>
            <%= link_to '新規登録', new_user_registration_path, class:"back-btn" %>
            <%= link_to 'ログイン', new_user_session_path, class:"back-btn" %>
          <% end %>
        </div>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
