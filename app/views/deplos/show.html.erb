<div>
  <div>
    <h2>
      <%= @deplo.deplo_title %>
    </h2>
    <h3>
      <%= @deplo.deplo_info%>
    </h3>
    <h4>
      カテゴリー：<%= Category.find(@deplo.category_id)[:name] %>
    </h4>
    <h4>
      住&emsp;&emsp;&emsp;所：<%= Prefecture.find(@deplo.prefecture_id)[:name] %><%= @deplo.municipality%>
    </h4>
  </div>

  <% if user_signed_in? %>
    <% if current_user == @deplo.user %>
      <%= link_to "編集する", edit_deplo_path %><br/>
      <%= link_to "削除する", deplo_path, method: :delete %><br/><br/>
    <% end %>
  <% end %>
  <%= link_to "トップページに戻る", root_path %>
</div>