<div>
  <div>
    <h2>
      <%= @deplo.deplo_title %>
    </h2>
    <div class="deplo__img__content">
      <%= image_tag @deplo.image, class: ""%>
    </div>
    <h3>
      <%= @deplo.deplo_info%>
    </h3>
    <%= image_tag deplo.images[0] %> <%#　imagesを表示　%>
    <% @deplo.images[1..-1].each do |deplo| %> <%# テーブルに保存されているimagesを順番に表示 %>
      <div class="">
        <%= image_tag image %>
      </div>
    <% end %>
    <h4>
      カテゴリー：<%= Category.find(@deplo.category_id)[:name] %>
    </h4>
    <h4>
      住&emsp;&emsp;&emsp;所：<%= Prefecture.find(@deplo.prefecture_id)[:name] %><%= @deplo.municipality%>
    </h4>
    <h4>
      投&emsp;稿&emsp;者：<%= @deplo.user[:nickname] %>
  </div>

  <% if user_signed_in? %>
    <% if current_user == @deplo.user %>
      <%= link_to "編集する", edit_deplo_path %><br/>
      <%= link_to "削除する", deplo_path, method: :delete %><br/><br/>
    <% end %>
  <% end %>
  <%= link_to "トップページに戻る", root_path %>
</div>